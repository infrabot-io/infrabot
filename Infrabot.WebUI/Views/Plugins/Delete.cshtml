@using Infrabot.Common.Models
@using Infrabot.WebUI.Constants
@model Plugin
@{
    ViewData["Title"] = "Delete plugin";
}

<div class="row mb-2 mt-3">
    <div class="col">
        <p class="fs-2 pt-0 mb-0">Delete</p>
        <p class="blog-post-meta mt-1 text-muted">Delete plugin. Performed actions are not reversable</p>
    </div>
</div>

@if (ViewData[TempDataKeys.PluginDeleteFailed] as bool? == true)
{
    <div class="alert alert-danger mt-2" role="alert">
        Could not delete plugin. Reason: @ViewBag.PluginDeleteFailReason
    </div>
}

<p>Are you sure that you want to delete plugin <code class="fs-5">@Model.Name</code> ?</p>

<form asp-action="Delete" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" asp-for="Id" />
    <input type="submit" class="btn btn-orange" value="Delete" />
    <a class="btn btn-outline-orange" href="~/plugins">Cancel</a>
</form>
